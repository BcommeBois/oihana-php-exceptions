{
    "name" : "oihana/php-exceptions" ,
    "type" : "library" ,
    "description" : "The Oihana PHP Core library" ,
    "keywords" : [ "php" , "exceptions" ] ,
    "homepage" : "https://github.com/BcommeBois/oihana-php-exceptions" ,
    "license" : "MPL-2.0" ,
    "authors" : [
        {
            "name" : "Marc Alcaraz" ,
            "email" : "marc@ooop.fr" ,
            "homepage" : "https://www.ooop.fr" ,
            "role" : "Project Founder, Lead Developer."
        }
    ],
    "support": {
        "email": "marc@ooop.fr"
    },
    "autoload-dev": {
        "psr-4": {
            "oihana\\exceptions\\" : "tests/oihana/exceptions"
        }
    },
    "autoload" :
    {
        "psr-4" :
        {
            "oihana\\exceptions\\": "src/oihana/exceptions"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-intl": "*"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit" ,
        "doc": "rm -rf docs && mkdir docs && cp -r .phpdoc/template/assets docs/assets && ./vendor/bin/phpdoc -c phpdoc.xml -v"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "nunomaduro/collision": "^8.8",
        "mikey179/vfsstream": "^1.6",
        "phpdocumentor/shim": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "phpdocumentor/shim": true
        }
    }
}
